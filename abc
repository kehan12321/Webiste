const PROMO_CODES = {
  ZALIANT20: 0.2,
  MAXPERF: 0.1,
  CRYPTO10: 0.1,
};

/* ===========================
   2) Cart Context
   =========================== */
const CartContext = createContext(null);

const CartProvider = ({ children }) => {
  const [cart, setCart] = useState([]);
  const [promoCode, setPromoCode] = useState("");
  const [isLoggedIn, setIsLoggedIn] = useState(false);
  const [checkoutData, setCheckoutData] = useState({
    paymentMethod: "",
    cryptoType: "BTC",
    email: "",
    giftCardCode: "",
    agreeToTerms: false,
  });

  const handleAddToCart = (product, quantity = 1) => {
    setCart((cur) => {
      const idx = cur.findIndex((i) => i.id === product.id);
      if (idx > -1) {
        return cur.map((it, i) => (i === idx ? { ...it, quantity: it.quantity + quantity } : it));
      }
      return [...cur, { ...product, quantity }];
    });
  };

  const updateQuantity = (id, newQuantity) => {
    setCart((cur) => cur.map((it) => (it.id === id ? { ...it, quantity: Math.max(1, newQuantity) } : it)));
  };

  const removeFromCart = (id) => setCart((cur) => cur.filter((it) => it.id !== id));

  const subtotal = useMemo(() => cart.reduce((s, i) => s + (i.price || 0) * (i.quantity || 1), 0), [cart]);
  const discountRate = promoCode ? PROMO_CODES[promoCode.toUpperCase()] || 0 : 0;
  const discount = subtotal * discountRate;
  const total = subtotal - discount;
  const totalItems = cart.reduce((s, i) => s + (i.quantity || 1), 0);

  const value = {
    cart,
    handleAddToCart,
    updateQuantity,
    removeFromCart,
    subtotal,
    discount,
    total,
    totalItems,
    promoCode,
    setPromoCode,
    isLoggedIn,
    setIsLoggedIn,
    PROMO_CODES,
    checkoutData,
    setCheckoutData,
  };

  return <CartContext.Provider value={value}>{children}</CartContext.Provider>;
};

const useCart = () => {
  const ctx = useContext(CartContext);
  if (!ctx) throw new Error("useCart must be used inside CartProvider");
  return ctx;
};

