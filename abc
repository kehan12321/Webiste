const ProductPage = ({ productId, navigate }) => {
  const product = productsData.find((p) => p.id === productId);
  const { handleAddToCart } = useCart();
  const [quantity, setQuantity] = useState(1);
  const [tab, setTab] = useState("description");

  useEffect(() => {
    if (!product && productId !== null) {
      // if product not found, go back to store after small delay
      const t = setTimeout(() => navigate("store"), 700);
      return () => clearTimeout(t);
    }
  }, [product, productId, navigate]);

  if (!product) return <div className="text-white">Product not found. Redirecting...</div>;

  const renderDescription = () =>
    product.long.map((line, i) => {
      if (!line) return null;
      if (line.startsWith("**")) return <h4 key={i} className="text-white font-semibold mt-4">{line.replace(/\*\*/g, "")}</h4>;
      if (line.startsWith("- ")) return <li key={i} className="text-gray-300 ml-4">{line.replace(/^- /, "")}</li>;
      return <p key={i} className="text-gray-300">{line}</p>;
    });

  return (
    <div className="space-y-6 fade-in">
      <button onClick={() => navigate("store")} className="text-purple-400 flex items-center gap-2 transition-colors hover:text-purple-300"><ArrowLeftIcon /> Back to store</button>

      <div className="grid grid-cols-1 lg:grid-cols-3 gap-8 bg-gray-900 p-6 rounded-lg shadow-xl">
        <div className="lg:col-span-1 bg-gray-800 p-6 rounded flex flex-col items-center">
          <PackageIcon className="w-16 h-16 text-purple-400" />
          <div className="mt-4 text-gray-400 text-sm">{product.id.toUpperCase()}</div>
        </div>

        <div className="lg:col-span-2 space-y-4">
          <span className={`px-3 py-1 rounded-full text-xs font-bold ${product.tag === "Best Value" ? "bg-red-600" : "bg-purple-600"}`}>{product.tag}</span>
          <h1 className="text-3xl font-bold">{product.title}</h1>
          <p className="text-gray-400">{product.short}</p>

          <div className="flex items-center gap-6">
            <div className="text-3xl font-extrabold text-purple-500">${product.price.toFixed(2)}</div>
            <div className="flex items-center gap-2 border rounded">
              <button onClick={() => setQuantity((q) => Math.max(1, q - 1))} className="px-3 hover:bg-gray-700 transition-colors">-</button>
              <div className="px-4">{quantity}</div>
              <button onClick={() => setQuantity((q) => q + 1)} className="px-3 hover:bg-gray-700 transition-colors">+</button>
            </div>
          </div>

          <div className="flex gap-3">
            <button onClick={() => { handleAddToCart(product, quantity); navigate("cart"); }} className="btn-primary px-6">Buy Now</button>
            <button onClick={() => handleAddToCart(product, quantity)} className="px-4 py-2 bg-gray-700 rounded transition-colors hover:bg-gray-600">Add to Cart</button>
          </div>

          <div>
            <div className="flex gap-2 border-b border-gray-800">
              <button onClick={() => setTab("description")} className={`pb-2 transition-colors ${tab === "description" ? "border-b-2 border-purple-600 text-white" : "text-gray-400 hover:text-white"}`}>Description</button>
              <button onClick={() => setTab("reviews")} className={`pb-2 transition-colors ${tab === "reviews" ? "border-b-2 border-purple-600 text-white" : "text-gray-400 hover:text-white"}`}>Reviews</button>
            </div>

            <div className="mt-4 bg-gray-800 p-4 rounded min-h-[160px]">
              {tab === "description" ? <div className="text-gray-300 space-y-2">{renderDescription()}</div> : <div className="text-gray-400">Reviews coming soon.</div>}
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

const CartPage = ({ navigate }) => {
  const { cart, updateQuantity, removeFromCart, subtotal, discount, total, promoCode, setPromoCode, PROMO_CODES } = useCart();
  const [promoInput, setPromoInput] = useState(promoCode || "");
  const [message, setMessage] = useState("");
  const [isApplyingPromo, setIsApplyingPromo] = useState(false);

  const applyPromoCode = () => {
    setIsApplyingPromo(true);
    setTimeout(() => {
      const code = promoInput.toUpperCase();
      if (PROMO_CODES[code] !== undefined) {
        setPromoCode(code);
        setMessage(`Applied ${code} â€” ${(PROMO_CODES[code] * 100).toFixed(0)}% off`);
      } else {
        setMessage("Invalid promo code");
      }
      setIsApplyingPromo(false);
    }, 500);
  };

  useEffect(() => {
    if (!promoInput) return setMessage("");
  }, [promoInput]);

  if (!cart.length) {
    return (
      <div className="text-center py-20 fade-in">
        <div className="text-4xl mb-4">ðŸ›’</div>
        <h2 className="text-2xl font-bold">Your cart is empty</h2>
        <p className="text-gray-400">Browse the store to add items.</p>
        <div className="mt-6">
          <button onClick={() => navigate("store")} className="btn-primary px-6">Go to Store</button>
        </div>
      </div>
    );
  }

  return (
    <div className="grid lg:grid-cols-3 gap-6 fade-in">
      <div className="lg:col-span-2 space-y-4">
        {cart.map((it) => (
          <div key={it.id} className="p-4 bg-gray-900 rounded-lg flex items-center justify-between slide-in">
            <div>
              <div className="font-bold">{it.title}</div>
              <div className="text-gray-400">${it.price.toFixed(2)} / unit</div>
            </div>

            <div className="flex items-center gap-3">
              <div className="flex items-center border rounded">
                <button onClick={() => updateQuantity(it.id, it.quantity - 1)} className="px-3 hover:bg-gray-700 transition-colors">-</button>
                <div className="px-3">{it.quantity}</div>
                <button onClick={() => updateQuantity(it.id, it.quantity + 1)} className="px-3 hover:bg-gray-700 transition-colors">+</button>
              </div>
              <div className="font-bold text-red-400">${(it.price * it.quantity).toFixed(2)}</div>
              <button onClick={() => removeFromCart(it.id)} className="text-red-500 hover:text-red-400 transition-colors"><XIcon /></button>
            </div>
          </div>
        ))}
      </div>

      <aside className="p-6 bg-gray-900 rounded-lg shadow-xl">
        <h3 className="font-bold text-xl">Order Summary</h3>
        <div className="mt-4 space-y-2">
          <div className="flex justify-between text-gray-300"><span>Subtotal</span><span>${subtotal.toFixed(2)}</span></div>
          <div className="flex justify-between text-red-400"><span>Discount</span><span>-${discount.toFixed(2)}</span></div>
          <div className="flex justify-between font-extrabold text-purple-400 text-2xl border-t border-purple-600 pt-3"><span>Total</span><span>${total.toFixed(2)}</span></div>

          <div className="mt-4">
            <label className="text-sm">Promo code</label>
            <div className="flex gap-2 mt-2">
              <input value={promoInput} onChange={(e) => setPromoInput(e.target.value)} className="bg-gray-800 p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-purple-600" placeholder="ZALIANT20" />
              <button onClick={applyPromoCode} disabled={isApplyingPromo} className="px-4 py-2 bg-red-600 rounded transition-all hover:bg-red-700 disabled:opacity-50">
                {isApplyingPromo ? "..." : "Apply"}
              </button>
            </div>
            {message && <div className={`text-sm mt-2 ${message.includes("Applied") ? "text-green-400" : "text-red-400"}`}>{message}</div>}
          </div>

          <div className="mt-6 space-y-2">
            <button onClick={() => navigate("checkout")} className="w-full btn-primary">Proceed to Checkout</button>
          </div>
        </div>
      </aside>
    </div>
  );
};

const CheckoutPage = ({ navigate }) => {
  const { cart, total, promoCode, checkoutData, setCheckoutData } = useCart();
  const [currentStep, setCurrentStep] = useState(1);
  const [isProcessing, setIsProcessing] = useState(false);
  const [orderComplete, setOrderComplete] = useState(false);
  const [orderId, setOrderId] = useState("");

  const cryptoAddresses = {
    BTC: "bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh",
    ETH: "0x742d35Cc6634C0532925a3b8D4C9db96C4b4Db45",
    LTC: "LTC1TESTADDRESS123456789ABCDEFG",
  };

  const handleCheckout = () => {
    setIsProcessing(true);
    // Simulate processing
    setTimeout(() => {
      setIsProcessing(false);
      setOrderComplete(true);
      setOrderId(`ZL-${Math.floor(Math.random() * 100000)}`);
    }, 3000);
  };

  if (!cart.length) {
    return (
      <div className="text-center py-20 fade-in">
        <h2 className="text-2xl font-bold">Your cart is empty</h2>
        <p className="text-gray-400">Add items to your cart before checking out.</p>
        <div className="mt-6">
          <button onClick={() => navigate("store")} className="btn-primary px-6">Go to Store</button>
        </div>
      </div>
    );
  }

  if (orderComplete) {
    return (
      <div className="max-w-2xl mx-auto text-center py-12 fade-in">
        <div className="text-6xl mb-4">âœ…</div>
        <h2 className="text-3xl font-bold mb-4">Order Complete!</h2>
        <p className="text-gray-400 mb-6">Thank you for your purchase. Your order has been processed successfully.</p>
        <div className="bg-gray-900 p-6 rounded-lg mb-6">
          <p className="text-sm text-gray-400 mb-2">Order ID</p>
          <p className="text-xl font-bold text-purple-400">{orderId}</p>
        </div>
        <p className="text-gray-400 mb-6">You will receive a confirmation email shortly with your product keys and download instructions.</p>
        <button onClick={() => navigate("dashboard")} className="btn-primary">Go to Dashboard</button>
      </div>
    );
  }

  return (
    <div className="max-w-4xl mx-auto fade-in">
      <h2 className="text-3xl font-bold mb-6">Checkout</h2>
      
      {/* Progress Steps */}
      <div className="flex items-center justify-between mb-8">
        <div className={`flex items-center ${currentStep >= 1 ? "text-purple-400" : "text-gray-600"}`}>
          <div className={`w-8 h-8 rounded-full flex items-center justify-center ${currentStep >= 1 ? "bg-purple-600" : "bg-gray-700"}`}>1</div>
          <span className="ml-2">Contact</span>
        </div>
        <div className={`flex-1 h-1 mx-2 ${currentStep >= 2 ? "bg-purple-600" : "bg-gray-700"}`}></div>
        <div className={`flex items-center ${currentStep >= 2 ? "text-purple-400" : "text-gray-600"}`}>
          <div className={`w-8 h-8 rounded-full flex items-center justify-center ${currentStep >= 2 ? "bg-purple-600" : "bg-gray-700"}`}>2</div>
          <span className="ml-2">Payment</span>
        </div>
        <div className={`flex-1 h-1 mx-2 ${currentStep >= 3 ? "bg-purple-600" : "bg-gray-700"}`}></div>
        <div className={`flex items-center ${currentStep >= 3 ? "text-purple-400" : "text-gray-600"}`}>
          <div className={`w-8 h-8 rounded-full flex items-center justify-center ${currentStep >= 3 ? "bg-purple-600" : "bg-gray-700"}`}>3</div>
          <span className="ml-2">Review</span>
        </div>
      </div>

      {/* Step 1: Contact Information */}
      {currentStep === 1 && (
        <div className="bg-gray-900 p-6 rounded-lg slide-in">
          <h3 className="text-xl font-bold mb-4">Contact Information</h3>
          <div className="space-y-4">
            <div>
              <label className="block text-sm mb-2">Email Address</label>
              <input
                type="email"
                value={checkoutData.email}
                onChange={(e) => setCheckoutData({ ...checkoutData, email: e.target.value })}
                className="w-full p-3 bg-gray-800 rounded focus:outline-none focus:ring-2 focus:ring-purple-600"
                placeholder="your@email.com"
                required
              />
            </div>
            <div className="flex items-center">
              <input
                type="checkbox"
                id="terms"
                checked={checkoutData.agreeToTerms}
                onChange={(e) => setCheckoutData({ ...checkoutData, agreeToTerms: e.target.checked })}
                className="mr-2"
              />
              <label htmlFor="terms" className="text-sm text-gray-400">
                I agree to the Terms of Service and Privacy Policy
              </label>
            </div>
            <button
              onClick={() => setCurrentStep(2)}
              disabled={!checkoutData.email || !checkoutData.agreeToTerms}
              className="btn-primary px-6 py-3 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Continue to Payment
            </button>
          </div>
        </div>
      )}

      {/* Step 2: Payment Method */}
      {currentStep === 2 && (
        <div className="bg-gray-900 p-6 rounded-lg slide-in">
          <h3 className="text-xl font-bold mb-4">Payment Method</h3>
          <div className="space-y-4">
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <button
                onClick={() => setCheckoutData({ ...checkoutData, paymentMethod: "crypto" })}
                className={`p-4 rounded-lg border-2 transition-all crypto-option ${checkoutData.paymentMethod === "crypto" ? "selected" : "border-gray-700"}`}
              >
                <div className="flex items-center justify-center mb-2">
                  <BitcoinIcon className="w-8 h-8 text-orange-400 mr-2" />
                  <EthereumIcon className="w-8 h-8 text-blue-400 mr-2" />
                  <LitecoinIcon className="w-8 h-8 text-gray-400" />
                </div>
                <p className="font-bold">Cryptocurrency</p>
                <p className="text-sm text-gray-400">BTC, ETH, LTC</p>
              </button>
              
              <button
                onClick={() => setCheckoutData({ ...checkoutData, paymentMethod: "giftcard" })}
                className={`p-4 rounded-lg border-2 transition-all crypto-option ${checkoutData.paymentMethod === "giftcard" ? "selected" : "border-gray-700"}`}
              >
                <div className="flex items-center justify-center mb-2">
                  <PackageIcon className="w-8 h-8 text-purple-400" />
                </div>
                <p className="font-bold">Gift Card</p>
                <p className="text-sm text-gray-400">Redeem with code</p>
              </button>
            </div>

            {checkoutData.paymentMethod === "crypto" && (
              <div className="mt-4 p-4 bg-gray-800 rounded-lg">
                <label className="block text-sm mb-2">Select Cryptocurrency</label>
                <div className="grid grid-cols-3 gap-2">
                  {["BTC", "ETH", "LTC"].map((crypto) => (
                    <button
                      key={crypto}
                      onClick={() => setCheckoutData({ ...checkoutData, cryptoType: crypto })}
                      className={`p-2 rounded border ${checkoutData.cryptoType === crypto ? "border-purple-600 bg-purple-900/30" : "border-gray-700"}`}
                    >
                      {crypto}
                    </button>
                  ))}
                </div>
                <div className="mt-4 p-3 bg-gray-900 rounded">
                  <p className="text-sm text-gray-400 mb-1">Send payment to:</p>
                  <p className="font-mono text-xs break-all">{cryptoAddresses[checkoutData.cryptoType]}</p>
                </div>
              </div>
            )}

            {checkoutData.paymentMethod === "giftcard" && (
              <div className="mt-4">
                <label className="block text-sm mb-2">Gift Card Code</label>
                <input
                  type="text"
                  value={checkoutData.giftCardCode}
                  onChange={(e) => setCheckoutData({ ...checkoutData, giftCardCode: e.target.value })}
                  className="w-full p-3 bg-gray-800 rounded focus:outline-none focus:ring-2 focus:ring-purple-600"
                  placeholder="Enter your gift card code"
                />
              </div>
            )}

            <div className="flex justify-between mt-6">
              <button onClick={() => setCurrentStep(1)} className="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 transition-colors">
                Back
              </button>
              <button
                onClick={() => setCurrentStep(3)}
                disabled={!checkoutData.paymentMethod || (checkoutData.paymentMethod === "giftcard" && !checkoutData.giftCardCode)}
                className="btn-primary px-6 py-3 disabled:opacity-50 disabled:cursor-not-allowed"
              >
                Continue to Review
              </button>
            </div>
          </div>
        </div>
      )}

      {/* Step 3: Review Order */}
      {currentStep === 3 && (
        <div className="bg-gray-900 p-6 rounded-lg slide-in">
          <h3 className="text-xl font-bold mb-4">Review Your Order</h3>
          
          <div className="space-y-4 mb-6">
            {cart.map((item) => (
              <div key={item.id} className="flex justify-between items-center pb-2 border-b border-gray-800">
                <div>
                  <p className="font-bold">{item.title}</p>
                  <p className="text-sm text-gray-400">Qty: {item.quantity}</p>
                </div>
                <p className="font-bold">${(item.price * item.quantity).toFixed(2)}</p>
              </div>
            ))}
          </div>

          <div className="space-y-2 mb-6">
            <div className="flex justify-between text-gray-400">
              <span>Subtotal</span>
              <span>${total.toFixed(2)}</span>
            </div>
            {promoCode && (
              <div className="flex justify-between text-green-400">
                <span>Promo Code ({promoCode})</span>
                <span>-${(total * 0.2).toFixed(2)}</span>
              </div>
            )}
            <div className="flex justify-between text-xl font-bold text-purple-400 pt-2 border-t border-gray-800">
              <span>Total</span>
              <span>${total.toFixed(2)}</span>
            </div>
          </div>

          <div className="mb-6">
            <p className="text-sm text-gray-400 mb-2">Payment Method</p>
            <p className="font-bold">
              {checkoutData.paymentMethod === "crypto" 
                ? `Cryptocurrency (${checkoutData.cryptoType})` 
                : "Gift Card"}
            </p>
          </div>

          <div className="mb-6">
            <p className="text-sm text-gray-400 mb-2">Contact Email</p>
            <p className="font-bold">{checkoutData.email}</p>
          </div>

          <div className="flex justify-between">
            <button onClick={() => setCurrentStep(2)} className="px-4 py-2 bg-gray-700 rounded hover:bg-gray-600 transition-colors">
              Back
            </button>
            <button
              onClick={handleCheckout}
              disabled={isProcessing}
              className="btn-primary px-6 py-3 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              {isProcessing ? (
                <span className="flex items-center">
                  <svg className="animate-spin -ml-1 mr-2 h-5 w-5 text-black" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle className="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" strokeWidth="4"></circle>
                    <path className="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Processing...
                </span>
              ) : (
                "Complete Order"
              )}
            </button>
          </div>
        </div>
      )}
    </div>
  );
};

const DashboardPage = () => (
  <div className="fade-in">
    <h2 className="text-2xl font-bold">Dashboard</h2>
    <div className="mt-4 p-4 bg-gray-900 rounded">Client area coming soon.</div>
  </div>
);

const SupportPage = () => (
  <div className="fade-in">
    <h2 className="text-2xl font-bold">Support</h2>
    <div className="mt-4 p-4 bg-gray-900 rounded">
      <p className="text-gray-400">Open a ticket on Discord or email support@zaliant.net</p>
    </div>
  </div>
);

const LoginPage = ({ navigate }) => {
  const { setIsLoggedIn } = useCart();
  const [isRegister, setIsRegister] = useState(false);
  const [isLoading, setIsLoading] = useState(false);
  
  const handleSubmit = (e) => {
    e.preventDefault();
    setIsLoading(true);
    // Simulate authentication
    setTimeout(() => {
      setIsLoggedIn(true);
      setIsLoading(false);
      navigate("dashboard");
    }, 1000);
  };

  return (
    <div className="flex items-center justify-center min-h-[60vh] fade-in">
      <div className="w-full max-w-md p-8 bg-gray-900 rounded-lg shadow-xl">
        <h2 className="text-2xl font-bold mb-4">{isRegister ? "Register" : "Login"}</h2>
        <form onSubmit={handleSubmit} className="space-y-3">
          <input required className="w-full p-3 bg-gray-800 rounded focus:outline-none focus:ring-2 focus:ring-purple-600" placeholder="Email" />
          <input required className="w-full p-3 bg-gray-800 rounded focus:outline-none focus:ring-2 focus:ring-purple-600" placeholder="Password" type="password" />
          {isRegister && <input className="w-full p-3 bg-gray-800 rounded focus:outline-none focus:ring-2 focus:ring-purple-600" placeholder="Confirm password" type="password" />}
          <button type="submit" disabled={isLoading} className="w-full btn-primary py-3 mt-2 disabled:opacity-50">
            {isLoading ? "Processing..." : (isRegister ? "Register" : "Sign in")}
          </button>
        </form>
        <div className="mt-3 text-center">
          <button onClick={() => setIsRegister((s) => !s)} className="text-purple-400 hover:text-purple-300 transition-colors">
            {isRegister ? "Already have an account?" : "Need an account?"}
          </button>
        </div>
      </div>
    </div>
  );
};

/* ===========================
   8) App (Router-style local)
   =========================== */
export default function App() {
  const [page, setPage] = useState("home");
  const [productId, setProductId] = useState(null);

  const navigate = (p) => setPage(p);
  const setAndOpenProduct = (id) => {
    setProductId(id);
    setPage("product");
  };

  const render = () => {
    switch (page) {
      case "store":
        return <StorePage navigate={navigate} setProductId={setAndOpenProduct} />;
      case "product":
        return <ProductPage productId={productId} navigate={navigate} />;
      case "cart":
        return <CartPage navigate={navigate} />;
      case "checkout":
        return <CheckoutPage navigate={navigate} />;
      case "dashboard":
        return <DashboardPage />;
      case "support":
        return <SupportPage />;
      case "login":
        return <LoginPage navigate={navigate} />;
      case "home":
      default:
        return <HomePage navigate={navigate} setProductId={setAndOpenProduct} />;
    }
  };

  return (
    <CartProvider>
      <Layout currentPage={page} navigate={navigate}>
        {render()}
      </Layout>
    </CartProvider>
  );
}